extends layout

block content
  h1 Lista de Episódios
  each episode in episodes
    .Episode
      table
        tr
          td
            h2
              a.link_to_episode(href=episode.linkToArticle)
                | !{episode.number} - !{episode.title}
            h3#Season Temporada #{episode.seasonNumber}, Episódio #{episode.seasonEpisodeNumber}
            p#Description #{episode.description}
            include ./includes/link_to_audio_file.jade
            br
            // Number of Disqus comments to the article
            | <strong><a class="linkToArticle" href=!{episode.linkToArticle}#disqus_thread data-disqus-identifier=!{episode.disqusID}>Nenhum comentário</a></strong>
            // Social buttons are consuming too much memory and increasing the page load time.
            // include ./includes/social_buttons_episode.jade
          td
            if episode.imageUrl
              img.episodeImage(src=episode.imageUrl)
    .Episode_spacer
     
  
  
  
